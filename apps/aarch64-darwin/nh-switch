#!/bin/sh -e

GREEN='\033[1;32m'
YELLOW='\033[1;33m'
RED='\033[1;31m'
NC='\033[0m'

export NIXPKGS_ALLOW_UNFREE=1

echo "${YELLOW}Starting darwin switch with nh...${NC}"
# nh will be provided via PATH by the mkApp wrapper  
nh darwin switch -H aarch64-darwin . $@

echo "${YELLOW}Loading yabai scripting addition...${NC}"
sudo yabai --load-sa
echo "${GREEN}Yabai scripting addition loaded!${NC}"

echo "${GREEN}Switch to new generation complete with nh!${NC}"
